{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "module": "es6",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "webpack.config.js"
  ]
}