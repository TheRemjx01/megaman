{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false,
    "declaration": true,
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["component/*"],
      "@shared/*": ["shared/*"],
      "@helpers/*": ["helpers/*"],
      "@selfTypes/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}